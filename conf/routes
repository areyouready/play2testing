# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index

# discs
GET         /discs                        controllers.Application.discs(filter ?= "", nxtFilter: Option[String] ?= None, prevFilter: Option[String] ?= None, page: Option[Int] ?= None)
#GET     /jsonDiscs                  controllers.Application.jsonDiscs(filterBox ?= "")
GET         /couchDiscs                   controllers.Application.couchDiscs(filter ?= "")
POST        /discs                        controllers.Application.newDisc
POST        /discs/:id/delete             controllers.Application.couchDeleteDisc(id: String, rev: String)
POST        /discs/:id/edit               controllers.Application.editDisc(id: String, rev: String, title: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
