# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# discs
GET     /discs                      controllers.Application.discs(filterBox ?= "")
GET     /jsonDiscs                  controllers.Application.couchDiscs(filterBox ?= "")
POST    /discs                      controllers.Application.newDisc
POST    /discs/:id/delete           controllers.Application.couchDeleteDisc(id: String, rev: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
